---
import Picture from '~/components/core/Picture.astro';
---

<section>
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-12 md:py-20">
			<div class="text-center pb-10 md:pb-16 max-w-5xl mx-auto">
				<h1 class="text-5xl md:text-[3.50rem] font-bold leading-tighter tracking-tighter mb-4 font-heading">
					<span class="text-accent-red">Design.</span>
					<span class="text-accent-yellow">Develop.</span>
					<span class="text-accent-blue">Deploy.</span>
				</h1>
				<div class="max-w-3xl mx-auto">
					<p class="text-xl text-gray-600 mb-8 dark:text-slate-400">
						Hi I'm MostlyWhat! I am a Freelancer Developer and a Minimalist Designer currently based in Thailand. I am a
						self-taught developer and designer who loves to create things that are fast, useful and beautiful.
					</p>
					<div class="max-w-none px-6 flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
						<div class="flex w-full sm:w-auto">
							<a class="btn-primary" href="/contact">Contact&nbsp;Us</a>
						</div>
						<div class="flex w-full sm:w-auto">
							<a class="btn-secondary" href="/about">Learn&nbsp;More</a>
						</div>
					</div>
				</div>
			</div>
			<div>
				<div class="relative mb-8 m-auto max-w-3xl">
					<Picture
						src={import('~/assets/images/hero.jpg')}
						class="mx-auto rounded-md shadow-lg bg-gray-400 dark:bg-slate-700 w-full"
						widths={[400, 768]}
						sizes="(max-width: 767px) 400px, 768px"
						alt="Hero Image"
						aspectRatio="16:9"
						loading="eager"
					/>
				</div>
			</div>
		</div>
	</div>
</section>
