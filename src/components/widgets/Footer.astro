---
import { Icon } from 'astro-icon';
import { getHomePermalink } from '~/utils/permalinks';
---

<footer class="border-t bg-background border-slate-800 md:backdrop-blur-sm">
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12">
			<div class="col-span-12 lg:col-span-4">
				<div class="mb-2">
					<a class="inline-block font-bold text-xl" href={getHomePermalink()}>MostlyWhat Systems</a>
				</div>
				<div class="text-sm text-gray-600">
					<a
						class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out"
						href="/legal/terms-and-conditions">Terms & Conditions</a
					> ·
					<a class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out" href="/legal/privacy-policy"
						>Privacy Policy</a
					>
				</div>
			</div>
			<div class="col-span-6 md:col-span-3 lg:col-span-2">
				<div class="text-gray-300 font-medium mb-2">Products</div>
				<ul class="text-sm">
					<li class="mb-2">
						<a class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out" href="#">Unos Project</a>
					</li>
					<li class="mb-2">
						<a class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out" href="#"
							>128BB yuzu Installer</a
						>
					</li>
					<li class="mb-2">
						<a class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out" href="#">View More</a>
					</li>
				</ul>
			</div>
			<div class="col-span-6 md:col-span-3 lg:col-span-2">
				<div class="text-gray-300 font-medium mb-2">Platforms</div>
				<ul class="text-sm">
					<li class="mb-2">
						<a class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out" href="#">Developer API</a>
					</li>
					<li class="mb-2">
						<a class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out" href="#">Partners</a>
					</li>
				</ul>
			</div>
			<div class="col-span-6 md:col-span-3 lg:col-span-2">
				<div class="text-gray-300 font-medium mb-2">Support</div>
				<ul class="text-sm">
					<li class="mb-2">
						<a class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out" href="#">Docs</a>
					</li>
					<li class="mb-2">
						<a class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out" href="#">Community Forum</a
						>
					</li>
					<li class="mb-2">
						<a class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out" href="#">Services</a>
					</li>
					<li class="mb-2">
						<a
							class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out"
							href="https://status.mostlywhat.systems">Status</a
						>
					</li>
				</ul>
			</div>
			<div class="col-span-6 md:col-span-3 lg:col-span-2">
				<div class="text-gray-300 font-medium mb-2">Company</div>
				<ul class="text-sm">
					<li class="mb-2">
						<a class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out" href="#">About</a>
					</li>
					<li class="mb-2">
						<a class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out" href="#">Blog</a>
					</li>
					<li class="mb-2">
						<a class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out" href="#">Careers</a>
					</li>
					<li class="mb-2">
						<a class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out" href="#">Press</a>
					</li>
					<li class="mb-2">
						<a class="hover:text-gray-200 text-gray-400 transition duration-150 ease-in-out" href="#">Store</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="md:flex md:items-center md:justify-between py-6 md:py-8">
			<ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0">
				<li>
					<a
						class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 text-sm p-2.5 inline-flex items-center border-4 border-background hover:border-4 hover:border-background hover:border-b-secondary-500"
						aria-label="Twitter"
						href="#"
					>
						<Icon name="tabler:brand-twitter" class="w-5 h-5" />
					</a>
				</li>
				<li>
					<a
						class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 text-sm p-2.5 inline-flex items-center border-4 border-background hover:border-4 hover:border-background hover:border-b-secondary-500"
						aria-label="Instagram"
						href="#"
					>
						<Icon name="tabler:brand-instagram" class="w-5 h-5" />
					</a>
				</li>
				<li>
					<a
						class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 text-sm p-2.5 inline-flex items-center border-4 border-background hover:border-4 hover:border-background hover:border-b-secondary-500"
						aria-label="Facebook"
						href="#"
					>
						<Icon name="tabler:brand-facebook" class="w-5 h-5" />
					</a>
				</li>
				<li>
					<a
						class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 text-sm p-2.5 inline-flex items-center border-4 border-background hover:border-4 hover:border-background hover:border-b-secondary-500"
						aria-label="RSS"
						href="/rss.xml"
					>
						<Icon name="tabler:rss" class="w-5 h-5" />
					</a>
				</li>
				<li>
					<a
						class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 text-sm p-2.5 inline-flex items-center border-4 border-background hover:border-4 hover:border-background hover:border-b-secondary-500"
						aria-label="Github"
						href="https://github.com/onwidget/astrowind"
					>
						<Icon name="tabler:brand-github" class="w-5 h-5" />
					</a>
				</li>
			</ul>
			<div class="text-sm text-gray-700 mr-4 dark:text-slate-400">
				© Copyright 2018-{new Date().getFullYear()} MostlyWhat Systems. All rights reserved.
			</div>
		</div>
	</div>
</footer>
